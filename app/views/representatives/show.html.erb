<header class="medium-fade shadow">
  <div class="wrapper">
    <div id="logo">
      <h1>Sales Helper</h1>
    </div>
    <div id="link">
      <a href="/logout">Log Out</a>
    </div>
  </div>
</header>

<h1><%= @representative.name %></h1>
<h3><%= @representative.territory %></h3>
<br>
<p>Choose a customer below or <button><a href="/customers/new">Add A Customer</a></button></p>

<ol>
  <% @representative.customers.each do |customer| %>
  <li><a href="/customers/<%= customer.slug %>"><%= customer.name%> - <%= customer.contact %></a></li>
  <% end %>
</ol>