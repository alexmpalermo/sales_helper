<% require 'date' %>
<header class="medium-fade shadow">
  <div class="wrapper">
    <div id="logo">
      <h1>Sales Helper</h1>
    </div>
    <div id="link">
      <a href="/logout">Log Out</a>
    </div>
  </div>
</header>

<div class="addcust">
<a href="/representatives/<%= @customer.representative.slug %>">Accounts</a>
</div>

<div class="customer">
<h1><%= @customer.name %></h1>
<h3><%= @customer.contact %></h3>
</div>
<br>
<div class="move2">
<button id="editdelete"><a href ="/customers/<%= @customer.slug %>/edit">Edit Account</a></button>
</div>
<div class="move">
<button id="editdelete"><a href ="/customers/<%= @customer.slug %>/delete">Delete Account</a></button>
</div>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<div class="section shadow">
<p class="need">NEED: </p>

<% @customer.items.each do |item| %>
<% now = item.date.to_date %>
<% today = Date.current %>
<% if now.between?(today - 365, today - 90) %>
<ul>
  <li><%= item.name %>, <%= item.quantity %> purchased on <%= item.date %></li>
</ul>
<% end %>
<% end %>
</div>

<div class="section shadow">
<p class="running_low">RUNNING LOW: </p>

<% @customer.items.each do |item| %>
<% now = item.date.to_date %>
<% today = Date.current %>
<% if now.between?(today - 90, today - 60) %>
<ul>
  <li><%= item.name %>, <%= item.quantity %> purchased on <%= item.date %></li>
</ul>
<% end %>
<% end %>
</div> 

<div class="section shadow">
<p class="just_bought">JUST BOUGHT: </p>

<% @customer.items.each do |item| %>
<% now = item.date.to_date %>
<% today = Date.current %>
<% if now.between?(today - 60, today) %>
<ul>
  <li><%= item.name %>, <%= item.quantity %> purchased on <%= item.date %></li>
</ul>
<% end %>
<% end %>
</div>

<div class="section shadow">
<p class="one_year">NOT PUCHASED IN OVER A YEAR: </p>

<% @customer.items.each do |item| %>
<% now = item.date.to_date %>
<% today = Date.current %>
<% if now.between?(today - 365, today - 10000) %>
<ul>
  <li><%= item.name %>, <%= item.quantity %> purchased on <%= item.date %></li>
</ul>
<% end %>
<% end %>
</div>
